<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="2" maxHeight="500.0" minHeight="500.0" prefHeight="500.0" prefWidth="500.0" vgap="2" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="XOmain.Controller">
   <columnConstraints>
       <ColumnConstraints maxWidth="300.0" minWidth="300.0" prefWidth="300.0" />
       <ColumnConstraints maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" />
       <RowConstraints maxHeight="250.0" minHeight="250.0" prefHeight="250.0" />
   </rowConstraints>
   <children>
      <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button fx:id="Settings" mnemonicParsing="false" onAction="#buttonSettings" text="Settings" />
            <Button fx:id="NewGame" layoutX="235.0" layoutY="18.0" mnemonicParsing="false" onAction="#buttonNewGame" text="New game" />
        </buttons>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </ButtonBar>
       <Label fx:id="labelCurrentPlayer" alignment="CENTER" prefHeight="50.0" prefWidth="100.0" text="X" GridPane.columnIndex="1" GridPane.rowIndex="0">
           <font>
               <Font name="System Bold" size="28.0" />
           </font></Label>
      <Canvas fx:id="gameCanvas" height="300.0" onMouseClicked="#mouseClickOnCanvas" onMouseMoved="#mouseMovedCanvas" width="300.0" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.rowSpan="2" />
      <Label fx:id="labelScoreboard" alignment="CENTER" prefHeight="50.0" prefWidth="100.0" text="0:0" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <font>
            <Font name="System Bold" size="36.0" />
         </font></Label>
   </children>
</GridPane>
